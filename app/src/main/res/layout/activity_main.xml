<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/top_bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/backschool"
    android:baselineAligned="false"
    android:orientation="vertical"
    android:rotationX="0"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/topname"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:background="#ff6750a4"
            android:gravity="left|center"
            android:text=" ★RoadForSujeong★"
            android:textColor="#FFFFFF"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/btn_mypage"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:gravity="top|right"
            android:src="@drawable/coding_logosize2" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="안녕하세요 로드포수정에 온 것을 환영합니다.\n당신은 오늘 최고의 식사를 하게 될 것입니다."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_move1"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="진짜 후기" />

        <Button
            android:id="@+id/btn_move2"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="맛집 지도" />

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/coding_logosize" />

        <Button
            android:id="@+id/btn_move3"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="오늘 추천" />

        <Button
            android:id="@+id/btn_move4"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@drawable/button_background"
            android:text="회원 인증" />

    </LinearLayout>

</LinearLayout>
